  "version": "0.1.0",
  "type": "module",
  "homepage": "https://ecohead.github.io/kondonizer/",
  "keywords": [
    "Media Library",
    "Custom Elements",
    "HTML",
    "Component"
  ],
  "bugs": {
    "url": "https://github.com/ecohead/kondonizer/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ecohead/kondonizer"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib",
    "types",
    "README.md",
    "LICENCE.txt",
    "theme_override.css"
  ],
  "exports": {
    ".": "./lib/index.js",
    "./standalone": "./lib/index.bundle.js"
  },
  "scripts": {
    "postinstall": "pnpx playwright install",
    "dev": "vite",
    "analyze": "cem analyze --litelement",
    "rollup": "rollup --config rollup.config.mjs",
    "esbuild": "node esbuild.config.js",
    "generate-types": "tsc -p tsconfig.types.json",
    "build": "rimraf lib && pnpm run analyze && pnpm run generate-types && pnpm run esbuild && pnpm run rollup",
    "publish:preview": "pnpm run build && npm pack",
    "publish": "pnpm run build && npm publish",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "filesize": "^8.0.7",
    "lit": "^2.0.2",
    "nanoid": "^3.3.3",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@babel/core": ">=7.11.0",
    "@babel/eslint-parser": ">=7.11.0",
    "@babel/eslint-plugin": "^7.6.0",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@open-wc/eslint-config": "^7.0.0",
    "@playwright/test": "^1.20.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vitest/ui": "^0.8.2",
    "@web-types/lit": "^2.0.0-3",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.10.2",
    "axe-playwright": "^1.1.11",
    "esbuild": "^0.14.30",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^2.55.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "playwright": "^1.20.2",
    "playwright-core": ">1.0.0",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "tiny-glob": "^0.2.9",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "vite": "^2.9.0",
    "vitest": "^0.8.2"
  },
  "customElements": "custom-elements.json",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
